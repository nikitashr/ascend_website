<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>

    </ol>
  
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="first-slide" src="/images/eMedicSuite_logo.jpg" alt="First slide">
            
            <div class="container-fluid">
                <div class="carousel-caption">
                    <!--<h1>EMR</h1>-->
                    
                    <p style="color:#434343;">A clinically relevant electronic medical record(EMR) that completely documents a patient's regimen.</p>
                    
                    <p><a class="btn btn-lg btn-inverse" href="/services" role="button">Learn More</a></p>

                </div>
            </div>
        </div>
    
        <div class="item">
            <img class="second-slide" src="/images/karma_new.png" alt="Second slide">
            
            <div class="container-fluid">
                <div class="carousel-caption">
                    <!--<h1>Karma CRM</h1>-->
                    
                    <p>A customizable customer relationship management solution and project management system for your enterprise.</p>
                    
                    <p><a class="btn btn-lg btn-inverse" href="/services" role="button">Request a Demo</a></p>

                </div>
            </div>
        </div>
        
        <div class="item">
            <img class="third-slide" src="/images/nepalvintage_mini.jpg" alt="Third slide">
            
            <div class="container-fluid">
                <div class="carousel-caption">
                    <!--<h1>Nepal Vintage</h1>-->
                
                    <p style="color:#000000;">BUY FROM NEPAL</p> 
                    <p style="color:#000000;">genuine. unique. vintage.</p>
                    
                    <p><a class="btn btn-lg btn-inverse" href="/services" role="button">Shop Now!</a></p>

                </div>
            </div>
        </div>

        <div class="item">
            <img class="fourth-slide" src="/images/chyangba_final_mini.jpg" alt="Third slide">
            
            <div class="container-fluid">
                <div class="carousel-caption">
                    <!--<h1>Chyangba</h1>-->
                
                    <p>Get the best deals from your local businesses. Just a scratch away.</p>
                    
                    <p><a class="btn btn-lg btn-inverse" href="/services" role="button">Sign Up Today</a></p>
                </div>
            </div>
        </div>
  
    </div>
  
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">        
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
  
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div><!-- /.carousel -->


